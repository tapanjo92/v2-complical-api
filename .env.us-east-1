# AWS Configuration for us-east-1 deployment
export AWS_REGION=us-east-1
export CDK_DEFAULT_REGION=us-east-1
export ENVIRONMENT=prod

# API Configuration (will be populated after deployment)
export API_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod
export FRONTEND_URL=https://your-cloudfront-distribution.cloudfront.net

# Optional: Alert email for monitoring
export ALERT_EMAIL=admin@getcomplical.com

# SES Configuration
export SES_FROM_EMAIL=noreply@getcomplical.com

# Enable Kinesis Analytics as primary metric counter
export ENABLE_KINESIS_ANALYTICS=true

# Frontend build configuration
export VITE_API_URL=$API_URL
export VITE_ENVIRONMENT=production